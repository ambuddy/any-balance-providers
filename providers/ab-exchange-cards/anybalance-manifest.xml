<?xml version="1.0" encoding="utf-8"?>
<provider>
  <id major_version="1" version="1">ab-exchange-cards</id>
  <name>Курс валюты для карт</name>
  <description html="true"><![CDATA[
  <p>Курсы валют некоторых банков для карт. Обычно у банков курс конвертации при оплате картой в иностранной валюте 
  курс отличается от курсов обмена для наличных. Если платить рублевой картой в иностранной валюте, то списание в 
  рублях будет по курсу продажи. Если пополнить рублевую карту иностранной валютой, то зачисление будет по курсу покупки.</p>
  ]]></description>
  <author>Ambuddy &lt;ambd.anybalance@mail.ru&gt;</author>
  <depends>
    <module id="library"/>
  </depends>
  <files>
    <icon>icon.png</icon>
    <js>api:jquery.min.js</js>
    <js>main.js</js>
    <preferences>preferences.xml</preferences>
    <history>history.xml</history>
  </files>
  <counters>
    <counter id="rate_mkb_usd_buy" name="МКБ купит USD" prefix="мкб $" />
    <counter id="rate_mkb_usd_sell" name="МКБ продает USD" prefix="мкб $" />
    <counter id="rate_mkb_eur_buy" name="МКБ купит EUR" prefix="мкб €" />
    <counter id="rate_mkb_eur_sell" name="МКБ продает EUR" prefix="мкб €" />
    <counter id="rate_sber_usd_buy" name="Сбербанк купит USD" prefix="сбр $" />
    <counter id="rate_sber_usd_sell" name="Сбербанк продает USD" prefix="сбр $" />
    <counter id="rate_sber_eur_buy" name="Сбербанк купит EUR" prefix="сбр €" />
    <counter id="rate_sber_eur_sell" name="Сбербанк продает EUR" prefix="сбр €" />
  </counters>
  <keywords>обмен валют, банк, карты</keywords>
  <type>exchange, rates</type>
  <country>ru</country>
</provider>
