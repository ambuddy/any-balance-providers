  <p>Курсы валют некоторых банков для карт. Обычно у банков курс конвертации при оплате картой в иностранной валюте курс отличается от курсов обмена для наличных.</p>
  ]]></description>
  <author>Ambuddy &lt;ambd.anybalance@mail.ru&gt;</author>
  <depends>
    <module id="library"/>
  </depends>
  <files>
    <js>api:jquery.min.js</js>
    <js>library.min.js</js>
    <icon>icon.png</icon>
    <preferences>preferences.xml</preferences>
    <js>main.js</js>
    <history>history.xml</history>
  </files>
  <counters>
    <counter id="rate" name="Курс МКБ" units=""/>
    <counter id="date" name="Дата" type="time" format="dd/MM/yyyy"/>
  </counters>
  <keywords>обмен валют, банк, карты</keywords>
  <type>exchange, rates</type>
  <country>ru</country>
